mixin formModal(id, response, form, action, title, dismiss, confirm)
    div(style="text-align: left")
        div(class="modal fade",
            data-bind-id="#{id}")
            div(class="modal-dialog")
                div(class="modal-content")
                    form(data-formfor-response="#{response}")
                        div(class="modal-header")
                            button(type="button",
                                class="close",
                                data-dismiss="modal")
                            h4(class="modal-title")= title
                        div(class="modal-body")
                            
                            if form == 'course'
                                include ../forms/course
                            else
                                div(class="alert alert-error fade in")
                                    button(type="button",
                                        class="close",
                                        data-dismiss="alert") x
                                    h4(class="alert heading") No form found! 

                        div(class="modal-footer")
                            button(type="button",
                                class="btn btn-default pull-left",
                                data-bind-id="#{id} | append 'Dismiss'",
                                data-dismiss="modal")= dismiss
                            button(type="submit",
                                class="btn btn-success",
                                data-bind-id="#{id} | append 'Confirm'",
                                data-dismiss="modal",
                                data-event-click="#{action}")= confirm